<div class="row">
  <div class="card col-md-8 offset-md-2 mb-3">
    <% @items.each do |item| %>
    <div class="card-header">
      <h3>
        <%= item.title %>
      </h3>
    </div>
    <div class="card-body">
      <p>
        <%= truncate(item.description, length: 75, separator: ' ') %>
      </p>
      <%= link_to "View Item", item, class: "btn btn-success" %>
    </div>
    <% end %>
  </div>

</div>